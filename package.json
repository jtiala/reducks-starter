{
  "name": "reducks-starter",
  "version": "0.1.0",
  "description": "Reducks Starter",
  "author": "Joonas Tiala <joonas.tiala@gmail.com>",
  "keywords": [
    "starter",
    "boilerplate",
    "bootstrap",
    "javascript",
    "react",
    "redux",
    "ducks",
    "reducks",
    "react-router",
    "immutablejs"
  ],
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/jtiala/reducks-starter"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack --mode production",
    "start": "NODE_ENV=development webpack-dev-server --watch --watch-content-base --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "yarn lint:js && yarn lint:styles && yarn lint:other",
    "lint:fix": "yarn lint:js:fix && yarn lint:styles:fix",
    "lint:js": "eslint src/**/*.{js,jsx}",
    "lint:js:fix": "eslint src/**/*.{js,jsx} --fix",
    "lint:styles": "stylelint src/**/*.{css,scss}",
    "lint:styles:fix": "stylelint src/**/*.{css,scss} --fix",
    "lint:other": "prettier --list-different '**/*.{md,json,yml,yaml}'",
    "format": "prettier --write '**/*.{js,jsx,css,scss,md,json,yml,yaml}'",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.0",
    "classnames": "^2.2.6",
    "fetch-mock": "^7.3.1",
    "immutable": "^4.0.0-rc.12",
    "modern-normalize": "^0.5.0",
    "node-fetch": "^2.3.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-immutable": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.0.5",
    "@storybook/addons": "^5.0.5",
    "@storybook/react": "^5.0.5",
    "autoprefixer": "^9.5.0",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^2.0.1",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.5.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "regenerator-runtime": "^0.13.2",
    "sass-loader": "^7.1.0",
    "storybook-react-router": "^1.0.5",
    "stylelint": "^9.10.1",
    "stylelint-config-idiomatic-order": "^6.2.0",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-prettier": "^1.0.6",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  }
}
