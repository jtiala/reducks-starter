{
  "name": "reducks-starter",
  "version": "0.1.0",
  "description": "Reducks Starter is a highly opinionated React/Redux boilerplate based on the re-ducks approach.",
  "author": "Joonas Tiala <joonas.tiala@gmail.com>",
  "keywords": [
    "starter",
    "boilerplate",
    "bootstrap",
    "javascript",
    "react",
    "redux",
    "ducks",
    "reducks",
    "react-router",
    "immutablejs"
  ],
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/jtiala/reducks-starter"
  },
  "scripts": {
    "analyze": "yarn build:stats && webpack-bundle-analyzer webpack-stats.json dist",
    "build": "NODE_ENV=production webpack --mode production",
    "build:stats": "NODE_ENV=production webpack --mode production --profile --json > webpack-stats.json",
    "deploy": "./scripts/deploy-gh-pages.sh",
    "format": "prettier --write '**/*.{js,jsx,css,scss,html,md,json,yml,yaml}'",
    "lint:fix": "yarn lint:js:fix && yarn lint:styles:fix",
    "lint:js:fix": "eslint src/**/*.{js,jsx} --fix",
    "lint:js": "eslint src/**/*.{js,jsx}",
    "lint:other": "prettier --list-different '**/*.{md,json,yml,yaml}'",
    "lint:styles:fix": "stylelint src/**/*.{css,scss} --fix",
    "lint:styles": "stylelint src/**/*.{css,scss}",
    "lint": "yarn lint:js && yarn lint:styles && yarn lint:other",
    "start": "NODE_ENV=development webpack-dev-server --watch --watch-content-base --mode development",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage",
    "test:coverage": "jest --coverage",
    "test:report": "jest --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.4.0",
    "history": "^4.9.0",
    "immutable": "^4.0.0-rc.12",
    "modern-normalize": "^0.5.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.2",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-immutable": "^4.0.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.0.10",
    "@storybook/addon-links": "^5.0.10",
    "@storybook/addons": "^5.0.10",
    "@storybook/react": "^5.0.10",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^2.0.1",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.17.0",
    "sass-loader": "^7.1.0",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "storybook-react-router": "^1.0.5",
    "stylelint": "^10.0.1",
    "stylelint-config-idiomatic-order": "^6.2.0",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-prettier": "^1.0.6",
    "sw-precache-webpack-plugin": "^0.11.5",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.30.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  }
}
